@model WebShop.Web.Models.CustomerGroupViewModel

@using (Html.BeginForm("Create", "AdminCustomerGroup", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <div class="row">
      <div class="col-md-6">
        <div class="box box-primary">
          <div class="box-header with-border">
            @if (@Model.CustomerGroup != null)
            {
                <h3 class="box-title">@Model.CustomerGroup.Id - @Model.CustomerGroup.Name</h3>
            }
            else
            {
                <h3 class="box-title">No status name</h3>
            }
          </div>
          <div class="box-header">
            <a href='@Url.Action("List")'>@L("BackButtonLabel")</a>
          </div>
          <form role="form">
            <div class="box-body">
              <div class="form-group">
                <label for="txtGroupName">@L("NameLabel")</label>
                @Html.TextBoxFor(@model => @model.CustomerGroup.Name, new { @id = "txtGroupName", @class = "form-control" })
              </div>
              <div class="form-group">
                <label for="txtGroupDescription">@L("DescriptionLabel")</label>
                @Html.TextBoxFor(@model => @model.CustomerGroup.Description, new { @id = "txtGroupDescription", @class = "form-control" })
              </div>
              <div class="checkbox">
                <label>
                  @Html.CheckBoxFor(@model => @model.CustomerGroup.IsActive) @L("IsActiveLabel")
                </label>
              </div>
            </div>
            <div class="box-footer">
              <button type="submit" class="btn btn-primary">@L("SaveButtonLabel")</button>
            </div>
          </form>
        </div>
      </div>
    </div>
}