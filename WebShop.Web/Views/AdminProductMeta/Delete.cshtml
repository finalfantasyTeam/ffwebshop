@model WebShop.Web.Models.ProductMetaViewModel

@{
    ViewBag.Title = "Delete";
}
<h3 class="box-title">Delete Product Meta</h3>
<div class="box-header">
  <a href='@Url.Action("List")'>@L("BackButtonLabel")</a>
</div>
<h4>Are you sure you want to delete this?</h4>
<div>
  <dl class="dl-horizontal"></dl>

  @using (Html.BeginForm())
  {
      @Html.AntiForgeryToken()
      @Html.HiddenFor(@model => @model.ProductMeta.ProductId)
      @Html.HiddenFor(@model => @model.ProductMeta.Id)
      @Html.HiddenFor(@model => @model.ProductMeta.MetaKey)
      @Html.HiddenFor(@model => @model.ProductMeta.IsActive)
      @Html.HiddenFor(@model => @model.ProductMeta.MetaValue)
      @Html.HiddenFor(@model => @model.ProductMeta.Notes)
      <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-primary" /> 
      </div>
  }
</div>
