@model WebShop.Web.Models.ProductManufactoryViewModel


<div class="row">
  <div class="col-md-6">
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">@Model.ProductManufactory.Id - @Model.ProductManufactory.Name</h3>
      </div>
      <div class="box-header">
        <a href='@Url.Action("List")'>@L("BackButtonLabel")</a>
      </div>
      @using (Html.BeginForm("Update", "AdminProductManufactory", FormMethod.Post, new { @enctype = "multipart/form-data" }))
      {
          <div class="box-body">
            <div class="form-group">
              <label for="txtManufactoryName">@L("NameLabel")</label>
              @Html.TextBoxFor(@model => @model.ProductManufactory.Name, new { @id = "txtManufactoryName", @class = "form-control" })
            </div>
            @Html.HiddenFor(@model => @model.ProductManufactory.Id)
            <div class="form-group">
              <label for="txtManufactoryDescription">@L("DescriptionLabel")</label>
              @Html.TextBoxFor(@model => @model.ProductManufactory.Description, new { @id = "txtManufactoryDescription", @class = "form-control" })
            </div>
            <div class="form-group">
              <label for="txtManufactoryCountry">@L("CountryLabel")</label>
              @Html.TextBoxFor(@model => @model.ProductManufactory.ManufactoryCountry, new { @id = "txtManufactoryCountry", @class = "form-control" })
            </div>
            <div class="form-group">
              <label for="txtCreateDate">@L("CreateDateLabel")</label>
              <p class="readonly-text">@Model.ProductManufactory.CreateDate</p>
              @Html.HiddenFor(@model => @model.ProductManufactory.CreateDate)
            </div>
            <div class="form-group">
              <label for="txtUpdateDate">@L("UpdateDateLabel")</label>
              <p class="readonly-text">@Model.ProductManufactory.UpdateDate</p>
            </div>
            <div class="form-group">
              <label for="fileManufactoryLogo">@L("ManufactoryLogoLabel")</label>
              <input type="file" name="File">
              @Html.HiddenFor(@model => @model.ProductManufactory.ManufactoryLogo)
              <p class="help-block">@L("UploadLogoHelpText")</p>
              <img width="100" src='@Url.Content(Model.ProductManufactory.ManufactoryLogo)' alt="@Model.ProductManufactory.Name" />
            </div>
            <div class="checkbox">
              <label>

                @Html.CheckBoxFor(@model => @model.ProductManufactory.IsActive) @L("IsActiveLabel")
              </label>

            </div>
          </div>
          <div class="box-footer">
            <button type="submit" class="btn btn-primary">@L("EditButtonLabel")</button>
            @Html.ActionLink(L("DeleteButtonLabel"), "Delete", new { @id = Model.ProductManufactory.Id }, new { @class = "btn btn-primary" })
          </div>
      }
    </div>
  </div>
</div>
<script type="text/javascript">
  $("#btnDeleteManufactory").click(function (e) {
    console.log(e);
  });
</script>
<div class="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Modal Default</h4>
      </div>
      <div class="modal-body">
        <p>One fine body&hellip;</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
