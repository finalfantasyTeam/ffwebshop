<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Product manufactory list</h3>
      </div>
      <div class="box-body">
        <table id="tblProductManufactory" class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>#</th>
              <th>Logo</th>
              <th>Name</th>
              <th>Description</th>
              <th>Country</th>
              <th>Active</th>
            </tr>
          </thead>
          <tbody>
            @{
                if (Model.ListProductManufactory != null)
                {
                  foreach (var data in Model.ListProductManufactory)
                  {
                        <tr>
                          <td>
                            <a href='@Url.Action("Details", new { id = data.Id })'>@data.Id</a>
                          </td>
                          <td>
                           <img src='@Url.Content("~")' alt="@data.ManufactoryLogo" />
                          </td>
                          <td>
                            <a href="@Url.Action("Details", new { id = data.Id })">@data.Name</a>
                          </td>
                          <td>@data.Description</td>
                          <td>@data.ManufactoryCountry</td>
                          <td>@data.IsActive</td>
                        </tr>
                  }
                }
            }
            
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function () {
    $("#tblProductManufactory").DataTable();
  });
</script>