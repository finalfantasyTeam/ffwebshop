@model WebShop.Web.Models.InvoiceViewModel

@using (Html.BeginForm("Update", "Invoice", FormMethod.Post))
{
}
<div class="row">
  <div class="col-md-6">
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">@Model.Invoice.Id - @Model.Invoice.CustomerId</h3>
        @Html.ActionLink(L("BackButtonLabel"), "List", null, new { @class = "btn-link" })
      </div>
      <form role="form">
        <div class="box-body">
          <div class="form-group">
            <label for="txtInvoiceCustomerId">@L("CustomerIdLabel")</label>
            <input id="txtInvoiceCustomerId" type="text" value="@Model.Invoice.CustomerId" class="form-control">
          </div>
          <div class="form-group">
            <label for="txtInvoiceTotal">@L("InvoiceTotalLabel")</label>
            <input id="txtInvoiceTotal" type="text" value="@Model.Invoice.InvoiceTotal" class="form-control">
          </div>
          <div class="form-group">
            <label for="txtInvoiceStatus">@L("StatusLabel")</label>
            <input id="txtInvoiceStatus" type="text" value="@Model.Invoice.Status" class="form-control">
          </div>
          <div class="form-group">
            <label for="txtNotes">@L("NotesLabel")</label>
            <input id="txtNotes" type="text" value="@Model.Invoice.Notes" class="form-control">
          </div>
          <div class="checkbox">
            <label>
              Invoice.cs
              @if (Model.Invoice.IsActive)
              {
                  <input type="checkbox" checked="checked" value="@Model.Invoice.IsActive"> @L("IsActiveLabel")
              }
              else
              {
                  <input type="checkbox" value="@Model.Invoice.IsActive"> @L("IsActiveLabel")
              }
            </label>
          </div>
        </div>
        <div class="box-footer">
          <button type="button" class="btn btn-primary">@L("EditButtonLabel")</button>
          <button type="button" class="btn btn-primary">@L("DeleteButtonLabel")</button>
        </div>
      </form>
    </div>
  </div>
</div>
