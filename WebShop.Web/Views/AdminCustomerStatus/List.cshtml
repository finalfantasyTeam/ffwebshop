<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Customer Status List</h3>
      </div>
      <div class="box-header">
        <a href='@Url.Action("Create")'>@L("AddNewLabel")</a>
      </div>
      <div class="box-body">
        <table id="tblCustomerStatus" class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Notes</th>
            </tr>
          </thead>
          <tbody>
            @{
                if (Model.ListCustomerStatus != null)
                {
                  foreach (var data in Model.ListCustomerStatus)
                  {
                        <tr>
                          <td>
                            <a href='@Url.Action("Details", new { id = data.Id })'>@data.Id</a>
                          </td>
                          <td>
                            <a href='@Url.Action("Details", new { id = data.Id })'>@data.Name</a>
                          </td>
                          <td>@data.Notes</td>
                        </tr>
                  }
                }
            }
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function () {
    $("#tblCustomerStatus").DataTable();
  });
</script>