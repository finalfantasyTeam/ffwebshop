@using (Html.BeginForm("Update", "AdminCustomerStatus", FormMethod.Post))
{
}
<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">@Model.CustomerStatus.Id - @Model.CustomerStatus.Name</h3>
                @Html.ActionLink(L("BackButtonLabel"), "List", null, new { @class = "btn-link" })
            </div>
            <form role="form">
                <div class="box-body">
                    <div class="form-group">
                        <label for="txtStatusName">@L("NameLabel")</label>
                        <input id="txtStatusName" type="text" value="@Model.CustomerStatus.Name" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="txtStatusDescription">@L("NotesLabel")</label>
                        <input id="txtStatusDescription" type="text" value="@Model.CustomerStatus.Notes" class="form-control">
                    </div>
                </div>
                <div class="box-footer">
                    <button type="button" class="btn btn-primary">@L("EditButtonLabel")</button>
                    <button type="button" class="btn btn-primary">@L("DeleteButtonLabel")</button>
                </div>
            </form>
        </div>
    </div>
</div>
