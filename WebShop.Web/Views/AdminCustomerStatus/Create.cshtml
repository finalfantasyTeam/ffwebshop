@using (Html.BeginForm("Update", "AdminCustomerStatus", FormMethod.Post))
{
}
<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">@Model.CustomerStatus.Id - @Model.CustomerStatus.Name</h3>
                <a class="btn-link">@L("BackButtonLabel")</a>
            </div>
            <form role="form">
                <div class="box-body">
                    <div class="form-group">
                        <label for="txtCategoryName">@L("NameLabel")</label>
                        <input id="txtCategoryName" type="text" value="@Model.CustomerStatus.Name" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="txtCategoryDescription">@L("NotesLabel")</label>
                        <input id="txtCategoryDescription" type="text" value="@Model.CustomerStatus.Notes" class="form-control">
                    </div>
                </div>
                <div class="box-footer">
                    <button type="button" class="btn btn-primary">@L("SubmitButtonLabel")</button>
                </div>
            </form>
        </div>
    </div>
</div>
