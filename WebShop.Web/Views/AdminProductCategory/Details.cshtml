@model WebShop.Web.Models.ProductCategoryViewModel


<div class="row">
  <div class="col-md-6">
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">@Model.ProductCategory.Id - @Model.ProductCategory.Name</h3>
      </div>
      <div class="box-header">
        <a href='@Url.Action("List")'>@L("BackButtonLabel")</a>
      </div>
      @using (Html.BeginForm("Update", "AdminProductCategory", FormMethod.Post, new { @enctype = "multipart/form-data" }))
      {
          <div class="box-body">
            <div class="form-group">
              <label for="txtCategoryName">@L("NameLabel")</label>
              @Html.TextBoxFor(@model => @model.ProductCategory.Name, new { @id = "txtCategoryName", @class = "form-control" })
            </div>
            @Html.HiddenFor(@model => @model.ProductCategory.Id)
            <div class="form-group">
              <label for="txtCategoryDescription">@L("DescriptionLabel")</label>
              @Html.TextBoxFor(@model => @model.ProductCategory.Description, new { @id = "txtCategoryDescription", @class = "form-control" })
            </div>
            <div class="form-group">
              <label for="txtParentCat">@L("ParentCatLabel")</label>
              @Html.DropDownListFor(@model => @model.ProductCategory.ParentCat, (IEnumerable<SelectListItem>)ViewBag.CategoryId, string.Empty, new { @class = "form-control without-styles" })
            </div>
            <div class="form-group">
              <label for="txtCreateDate">@L("CreateDateLabel")</label>
              <p class="readonly-text">@Model.ProductCategory.CreateDate</p>
              @Html.HiddenFor(@model => @model.ProductCategory.CreateDate)
            </div>
            <div class="form-group">
              <label for="txtUpdateDate">@L("UpdateDateLabel")</label>
              <p class="readonly-text">@Model.ProductCategory.UpdateDate</p>
            </div>
            <div class="form-group">
              <label for="fileImageToShow">@L("ImageToShowLabel")</label>
              <input type="file" name="File">
              @Html.HiddenFor(@model => @model.ProductCategory.ImageToShow)
              <p class="help-block">@L("UploadLogoHelpText")</p>
              <img width="100" src='@Url.Content(Model.ProductCategory.ImageToShow)' alt="@Model.ProductCategory.Name" />
            </div>
            <div class="checkbox">
              <label>

                @Html.CheckBoxFor(@model => @model.ProductCategory.IsActive) @L("IsActiveLabel")
              </label>

            </div>
          </div>
          <div class="box-footer">
            <button type="submit" class="btn btn-primary">@L("EditButtonLabel")</button>
            @Html.ActionLink(L("DeleteButtonLabel"), "Delete", new { @id = Model.ProductCategory.Id }, new { @class = "btn btn-primary" })
          </div>
      }
    </div>
  </div>
</div>
<script type="text/javascript">
  $("#btnDeleteCategory").click(function (e) {
    console.log(e);
  });
</script>
<div class="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Modal Default</h4>
      </div>
      <div class="modal-body">
        <p>One fine body&hellip;</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
