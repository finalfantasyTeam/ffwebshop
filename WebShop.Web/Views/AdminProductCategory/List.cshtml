<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Product Category List</h3>
            </div>
          <div class="box-header">
            <a href='@Url.Action("Create")'>@L("AddNewLabel")</a>
          </div>
            <div class="box-body">
                <table id="tblProductCategory" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Parent Category</th>
                            <th>Description</th>
                            <th>Active</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (Model.ListProductCategory != null)
                            {
                                foreach (var data in Model.ListProductCategory)
                                {
                                    <tr>
                                        <td>
                                            <a href='@Url.Action("Details", new { id = data.Id })'>@data.Id</a>
                                        </td>
                                      <td>
                                        <img height="70" src='@Url.Content(data.ImageToShow)' alt="@data.Name" />
                                      </td>
                                        <td>
                                            <a href="@Url.Action("Details", new { id = data.Id })">@data.Name</a>
                                        </td>
                                        <td>@data.ParentCat</td>
                                        <td>@data.Description</td>
                                        <td>@data.IsActive</td>
                                    </tr>
                                }
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
  $(document).ready(function () {
    $("#tblProductCategory").DataTable();
  });
</script>