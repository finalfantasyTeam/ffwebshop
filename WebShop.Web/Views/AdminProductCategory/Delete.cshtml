@model WebShop.Web.Models.ProductCategoryViewModel

@{
    ViewBag.Title = "Delete";
}
<h3 class="box-title">Delete Product Category</h3>
<div class="box-header">
  <a href='@Url.Action("List")'>@L("BackButtonLabel")</a>
</div>
<h4>Are you sure you want to delete this?</h4>
<div> 
  <dl class="dl-horizontal"></dl>

  @using (Html.BeginForm())
  {
      @Html.AntiForgeryToken()
      @Html.HiddenFor(@model => @model.ProductCategory.Name)
      @Html.HiddenFor(@model => @model.ProductCategory.Id)
      @Html.HiddenFor(@model => @model.ProductCategory.Description)
      @Html.HiddenFor(@model => @model.ProductCategory.IsActive)
      @Html.HiddenFor(@model => @model.ProductCategory.ImageToShow)
      @Html.HiddenFor(@model => @model.ProductCategory.ParentCat)
      <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-primary" />
      </div>
  }
</div>
