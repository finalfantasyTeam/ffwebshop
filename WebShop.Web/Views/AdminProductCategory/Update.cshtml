@using (Html.BeginForm("Update", "AdminProductCategory", FormMethod.Post))
{
}
<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">@Model.ProductCategory.Id - @Model.ProductCategory.Name</h3>
                @Html.ActionLink(L("BackButtonLabel"), "List", null, new { @class = "btn-link" })
            </div>
            <form role="form">
                <div class="box-body">
                    <div class="form-group">
                        <label for="txtCategoryName">@L("NameLabel")</label>
                        <input id="txtCategoryName" type="text" value="@Model.ProductCategory.Name" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="txtCategoryDescription">@L("DescriptionLabel")</label>
                        <input id="txtCategoryDescription" type="text" value="@Model.ProductCategory.Description" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="txtCreateDate">@L("CreateDateLabel")</label>
                        <input id="txtCreateDate" type="text" value="@Model.ProductCategory.CreateDate" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="txtUpdateDate">@L("UpdateDateLabel")</label>
                        <input id="txtUpdateDate" type="text" value="@Model.ProductCategory.UpdateDate" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="fileImageToShow">@L("ImageToShowLabel")</label>
                        <input type="file" id="fileImageToShow">
                        <p class="help-block">@L("UploadLogoHelpText")</p>
                        @Model.ProductCategory.ImageToShow
                    </div>
                    <div class="checkbox">
                        <label>
                            @if (Model.ProductCategory.IsActive)
                            {
                                <input type="checkbox" checked="checked" value="@Model.ProductCategory.IsActive"> @L("IsActiveLabel")
                            }
                            else
                            {
                                <input type="checkbox" value="@Model.ProductCategory.IsActive"> @L("IsActiveLabel")
                            }
                        </label>
                    </div>
                </div>
                <div class="box-footer">
                    <button type="button" class="btn btn-primary">@L("SaveButtonLabel")</button>
                </div>
            </form>
        </div>
    </div>
</div>