@model WebShop.Web.Models.ProductStatusViewModel


<div class="row">
  <div class="col-md-6">
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">@Model.ProductStatus.Id - @Model.ProductStatus.Name</h3>
      </div>
      <div class="box-header">
        <a href='@Url.Action("List")'>@L("BackButtonLabel")</a>
      </div>
      @using (Html.BeginForm("Update", "AdminProductStatus", FormMethod.Post, new { @enctype = "multipart/form-data" }))
      {
          <div class="box-body">
            <div class="form-group">
              <label for="txtStatusName">@L("NameLabel")</label>
              @Html.TextBoxFor(@model => @model.ProductStatus.Name, new { @id = "txtStatusName", @class = "form-control" })
            </div>
            @Html.HiddenFor(@model => @model.ProductStatus.Id)
            <div class="form-group">
              <label for="txtStatusNotes">@L("NotesLabel")</label>
              @Html.TextBoxFor(@model => @model.ProductStatus.Notes, new { @id = "txtStatusNotes", @class = "form-control" })
            </div>
          </div>
          <div class="box-footer">
            <button type="submit" class="btn btn-primary">@L("EditButtonLabel")</button>
            @Html.ActionLink(L("DeleteButtonLabel"), "Delete", new { @id = Model.ProductStatus.Id }, new { @class = "btn btn-primary" })
          </div>
      }
    </div>
  </div>
</div>
<script type="text/javascript">
  $("#btnDeleteStatus").click(function (e) {
    console.log(e);
  });
</script>
<div class="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Modal Default</h4>
      </div>
      <div class="modal-body">
        <p>One fine body&hellip;</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
