@model WebShop.Web.Models.ProductStatusViewModel

@using (Html.BeginForm("Create", "AdminProductStatus", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <div class="row">
      <div class="col-md-6">
        <div class="box box-primary">
          <div class="box-header with-border">
            @if (@Model.ProductStatus != null)
            {
                <h3 class="box-title">@Model.ProductStatus.Id - @Model.ProductStatus.Name</h3>
            }
            else
            {
                <h3 class="box-title">No Records Found</h3>
            }
          </div>
          <div class="box-header">
            <a href='@Url.Action("List")'>@L("BackButtonLabel")</a>
          </div>
          <form role="form">
            <div class="box-body">
              <div class="form-group">
                <label for="txtStatusName">@L("NameLabel")</label>
                @Html.TextBoxFor(@model => @model.ProductStatus.Name, new { @id = "txtStatusName", @class = "form-control" })
              </div>
              <div class="form-group">
                <label for="txtStatusNotes">@L("NotesLabel")</label>
                @Html.TextBoxFor(@model => @model.ProductStatus.Notes, new { @id = "txtStatusNotes", @class = "form-control" })
              </div>
            </div>
            <div class="box-footer">
              <button type="submit" class="btn btn-primary">@L("SaveButtonLabel")</button>
            </div>
          </form>
        </div>
      </div>
    </div>
}