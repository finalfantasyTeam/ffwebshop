@model WebShop.Web.Models.ConfigOptionsViewModel

<div class="row">
  <div class="col-md-6">
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">@Model.ConfigOptions.Id - @Model.ConfigOptions.OptionKey</h3>
        @Html.ActionLink(L("BackButtonLabel"), "List", null, new { @class = "btn-link" })
      </div>
      @using (Html.BeginForm("Update", "AdminProductManufactory", FormMethod.Post))
      {
          <div class="box-body">
            <div class="form-group">
              <label for="txtConfigOptionKey,">@L("KeyLabel")</label>
              @Html.TextBoxFor(model => model.ConfigOptions.OptionKey, new { @id = "txtConfigOptionKey,", @class = "form-control" })
            </div>
            <div class="form-group">
              <label for="txtConfigOptionValue">@L("ValueLabel")</label>
              @Html.TextBoxFor(model => model.ConfigOptions.OptionValue, new { @id = "txtConfigOptionValue", @class = "form-control" })
            </div>
            <div class="form-group">
              <label for="txtConfigOptionNotes">@L("NotesLabel")</label>
              @Html.TextBoxFor(model => model.ConfigOptions.Notes, new { @id = "txtConfigOptionNotes", @class = "form-control" })
            </div>
            <div class="checkbox">
              @Html.CheckBoxFor(model => model.ConfigOptions.IsActive)
              @Html.LabelFor(model => model.ConfigOptions.IsActive, L("IsActiveLabel"))
            </div>
          </div>
          <div class="box-footer">
            <a href="@Url.Action("Update", new { id = Model.ConfigOptions.Id })" class="btn btn-primary">@L("EditButtonLabel")</a>
            <button id="btnDeletConfigOption" type="button" class="btn btn-primary">@L("DeleteButtonLabel")</button>
          </div>
      }
    </div>
  </div>
</div>
<script type="text/javascript">
  $("#btnDeletConfigOption").click(function (e) {

  });
</script>
<div class="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Modal Default</h4>
      </div>
      <div class="modal-body">
        <p>One fine body&hellip;</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
