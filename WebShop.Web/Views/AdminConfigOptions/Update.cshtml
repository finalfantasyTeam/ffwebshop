@model WebShop.Web.Models.ConfigOptionsViewModel
<div class="row">
  <div class="col-md-6">
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">@Model.ConfigOptions.Id - @Model.ConfigOptions.OptionKey</h3>
        @Html.ActionLink(L("BackButtonLabel"), "List", null, new { @class = "btn-link" })
      </div>
      @using (Html.BeginForm("Update", "AdminConfigOptions", FormMethod.Post, new { @enctype = "multipart/form-data" }))
      {
          @Html.HiddenFor(model => model.ConfigOptions.Id)
          <div class="box-body">
            <div class="form-group">
              <label for="txtConfigOptionKey,">@L("KeyLabel")</label>
              @Html.TextBoxFor(model => model.ConfigOptions.OptionKey, new { @id = "txtConfigOptionKey,", @class = "form-control" })
            </div>
            <div class="form-group">
              <label for="txtConfigOptionValue">@L("ValueLabel")</label>
              @Html.TextBoxFor(model => model.ConfigOptions.OptionValue, new { @id = "txtConfigOptionValue", @class = "form-control" })
            </div>
            <div class="form-group">
              <label for="txtConfigOptionNotes">@L("NotesLabel")</label>
              @Html.TextBoxFor(model => model.ConfigOptions.Notes, new { @id = "txtConfigOptionNotes", @class = "form-control" })
            </div>
            <div class="checkbox">
              @Html.CheckBoxFor(model => model.ConfigOptions.IsActive)
              @Html.LabelFor(model => model.ConfigOptions.IsActive, L("IsActiveLabel"))
            </div>
          </div>
          <div class="box-footer">
            <button type="submit" class="btn btn-primary">@L("SaveButtonLabel")</button>
          </div>
      }
    </div>
  </div>
</div>